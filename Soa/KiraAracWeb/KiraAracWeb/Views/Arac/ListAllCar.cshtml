@model IEnumerable<OtoKiralama.Models.Arac>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section id="choose-car" class="section-padding"></section><!-- Section Title Start -->
<div class="col-lg-12">
    <div class="section-title  text-center">
        <h2>Arabanızı Seçin</h2>
        <span class="title-line"><i class="fa fa-car"></i></span>
    </div>
</div>
<!-- Section Title End -->
        </div>
<div class="row popular-car-gird">
    <!-- Single Popular Car Start -->
    @foreach (var item in Model)
    {
        if (item.RezerveDurumu == false)
        {
            <div class="col-lg-4 col-md-6 con suv mpv">
                <div class="single-popular-car">
                    <div class="p-car-thumbnails">
                        <a class="car-hover" href="~/Content/img/car/@item.Resim">
                            <img src="~/Content/img/car/@item.Resim" alt="JSOFT">
                        </a>
                    </div>

                    <div class="p-car-content">
                        <h3>
                            <a href="/Arac/ArabaDetay/@item.AracId">@item.AracAdi</a>
                            <span class="price"><i class="fa fa-tag"></i> ₺@item.GunlukKiralikFiyat/günlük</span>
                        </h3>

                        <h5> @item.Model</h5>

                        <div class="p-car-feature">
                            <a href="#">Koltuk Sayisi:@item.KoltukSayisi</a>
                            <a href="#">Bagaj Hacmi:@item.BagajHacmi</a>

                        </div>
                    </div>
                </div>
            </div>
        }

    }

    <!-- Single Popular Car End -->
</div>
    </div>
</section>